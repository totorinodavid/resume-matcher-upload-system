services:
  - type: web
    name: nextjs-upload-api
    runtime: node
    rootDir: apps/backend-clean
    buildCommand: npm install && npm run build  
    startCommand: npm start -p $PORT
    preDeployCommand: npx prisma migrate deploy
    instanceCount: 1
    healthCheckPath: /api/health
    autoDeploy: true
    plan: free
    region: oregon
    disk:
      name: files-storage
      mountPath: /opt/render/project/src/uploads
      sizeGB: 1
    envVars:
      - key: NODE_ENV
        value: production
      - key: DATABASE_URL
        fromDatabase:
          name: files-db
          property: connectionString
      - key: UPLOAD_DIR
        value: /opt/render/project/src/uploads

databases:
  - name: files-db
    databaseName: files
    user: files_user
    plan: free
    region: oregon
